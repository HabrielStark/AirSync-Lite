{
  "name": "airsync-lite",
  "version": "1.0.0",
  "description": "AirSync-Lite",
  "main": "dist/main/main.js",
  "bin": {
    "airsync": "dist/main/cli.js"
  },
  "scripts": {
    "start": "electron dist/main/main.js",
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.electron.json",
    "build:renderer": "react-scripts build",
    "build:main": "tsc -p tsconfig.electron.json",
    "dev": "npm-run-all --parallel dev:renderer dev:main",
    "dev:renderer": "cross-env BROWSER=none react-scripts start",
    "dev:main": "wait-on http://localhost:3000 && tsc -p tsconfig.electron.json -w",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "jest",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.test.ts'",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.ts'",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "audit": "npm audit --production --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "sbom": "cyclonedx-npm --output-file sbom.json",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "cli": "node dist/main/cli.js"
  },
  "dependencies": {
    "@emotion/react": "11.11.4",
    "@emotion/styled": "11.11.5",
    "@mui/icons-material": "5.15.14",
    "@mui/material": "5.15.14",
    "@mui/x-data-grid": "8.12.1",
    "@mui/x-date-pickers": "7.0.0",
    "better-sqlite3": "11.7.0",
    "chokidar": "3.6.0",
    "commander": "11.1.0",
    "date-fns": "3.6.0",
    "electron-store": "8.2.0",
    "electron-updater": "6.6.2",
    "i18next": "23.10.1",
    "i18next-electron-fs-backend": "3.0.2",
    "ignore": "5.3.1",
    "lodash.debounce": "4.0.8",
    "micromatch": "4.0.8",
    "node-cron": "3.0.3",
    "notistack": "3.0.1",
    "p-queue": "8.0.1",
    "qrcode": "1.5.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "14.1.0",
    "react-router-dom": "6.22.3",
    "selfsigned": "3.0.1",
    "socket.io": "4.8.1",
    "socket.io-client": "4.8.1",
    "uuid": "9.0.1",
    "web-vitals": "5.1.0",
    "winston": "3.12.0",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "4.0.3",
    "@electron/notarize": "2.3.0",
    "@playwright/test": "1.48.2",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "14.2.2",
    "@testing-library/user-event": "14.5.2",
    "@types/better-sqlite3": "7.6.11",
    "@types/jest": "29.5.12",
    "@types/lodash.debounce": "4.0.9",
    "@types/micromatch": "4.0.9",
    "@types/node": "20.11.30",
    "@types/node-cron": "3.0.11",
    "@types/qrcode": "1.5.5",
    "@types/react": "18.2.73",
    "@types/react-dom": "18.2.23",
    "@types/uuid": "9.0.8",
    "@types/yargs": "17.0.32",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "cross-env": "7.0.3",
    "electron": "32.2.7",
    "electron-builder": "24.13.3",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "icon-gen": "5.0.0",
    "jest": "29.7.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "react-scripts": "5.0.1",
    "svgexport": "0.4.2",
    "ts-jest": "29.1.2",
    "typedoc": "0.26.11",
    "typescript": "5.4.5",
    "wait-on": "7.2.0"
  },
  "build": {
    "appId": "com.airsync.lite",
    "productName": "AirSync-Lite",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "pkg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "assets/icons"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "optionalDependencies": {
    "wrtc": "0.4.7"
  }
}
